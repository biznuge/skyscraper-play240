# Routes
# This file defines all application routes (Higher priority routes first)
#
# Note: @controllers syntax signifies the actual controller instance, retrieved via GlobalSettings.getController().
# ~~~~

# Single endpoint for serving AngularJS
GET     /                           @controllers.Application.index()
GET     /scrape                     @controllers.Items.scrape()
GET     /ok                         @controllers.Items.index()
#GET     /fuck                     controllers.Items.fuck()
#GET     /randomUUID                 controllers.Application.randomUUID

# User management API
#GET     /items/:page/:term                      @controllers.Items.findItems(page:Integer, term: String)
#POST    /itemSearch.json                 @controllers.Items.search
#POST    /item                       @controllers.Users.createUser
#PUT     /item/:firstName/:lastName  @controllers.Users.updateUser(firstName: String, lastName: String)


# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET        /assets/*file                 controllers.Assets.at(path="/public", file)